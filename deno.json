{
	"tasks": {
		"check": "deno fmt --check . && deno lint . && deno check **/*.ts && deno check **/*.tsx",
		"dev": "deno run -A --watch=static/,routes/ dev.ts",
		"build": "deno run -A dev.ts build",
		"start": "deno run -A main.ts",
		"update": "deno run -A -r jsr:@fresh/update ."
	},
	"lint": {
		"rules": {
			"tags": [
				"fresh",
				"recommended"
			]
		}
	},
	"exclude": [
		"**/_fresh/*"
	],
	"imports": {
		"fresh": "jsr:@fresh/core@^2.0.0-alpha.34",
		"@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
		"preact": "npm:preact@^10.26.6",
		"@preact/signals": "npm:@preact/signals@^2.0.4",
		"tailwindcss": "npm:tailwindcss@3.4.3",
		"@std/dotenv": "jsr:@std/dotenv@^0.225.4",
		"DOMEventHandlers": "./utilities/DOMEventHandlers.tsx",
		"appConfig": "./config.ts",
		"clsx": "https://esm.sh/clsx@2.1.1",
		"components": "./components/index.ts",
		"dayjs": "npm:dayjs",
		"hooks": "./hooks/index.ts",
		"utils": "./utils.ts",
		"humanizer/": "https://deno.land/x/humanizer@1.1/",
		"islands": "./islands/index.ts",
		"tailwindcss/": "npm:/tailwindcss@3.4.13/",
		"@tailwindcss/": "npm:/@tailwindcss/",
		"tailwindcss/plugin": "npm:/tailwindcss@3.4.13/plugin.js",
		"types": "./types/index.ts",
		"typography": "https://esm.sh/@tailwindcss/typography"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"dom.iterable",
			"deno.ns"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 100,
		"indentWidth": 4,
		"semiColons": true
	},
	"nodeModulesDir": "auto"
}